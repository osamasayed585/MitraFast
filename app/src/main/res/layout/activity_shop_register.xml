<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MVVM.Shop.ShopRegister.ShopRegisterActivity">

    <FrameLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:onClick="onBackClick"
            android:src="@drawable/back_button" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/medium_dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/register_as_provider"
                android:textColor="@color/colorPrimary"
                android:textSize="36dp" />


            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/medium_margin">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_pic"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_profile"
                    app:civ_border_color="@color/alert_default_error_background"
                    app:civ_border_width="1dp"/>

                <ImageView
                    android:id="@+id/btn_add_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="16sp"
                    android:src="@drawable/cam" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/small_dp"
                android:text="@string/dd_image"
                android:textSize="@dimen/tx_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/medium_dp"
                android:gravity="center"
                android:padding="@dimen/small_dp"
                android:text="@string/store_name_ar"
                android:textSize="@dimen/tx_medium" />

            <EditText
                android:id="@+id/et_edit_name_ar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/rounded_corner_gray_solid"
                android:gravity="center"
                android:padding="@dimen/medium_padding"
                android:textSize="@dimen/tx_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/medium_dp"
                android:gravity="center"
                android:padding="@dimen/small_dp"
                android:text="@string/store_name_en"
                android:textSize="@dimen/tx_medium" />

            <EditText
                android:id="@+id/et_edit_name_en"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="start"
                android:background="@drawable/rounded_corner_gray_solid"
                android:gravity="center"
                android:padding="@dimen/medium_padding"
                android:textSize="@dimen/tx_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/medium_dp"
                android:gravity="center"
                android:padding="@dimen/small_dp"
                android:text="@string/commercial_registration_number"
                android:textSize="@dimen/tx_medium" />

            <EditText
                android:id="@+id/et_CommercialRegistrationNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="start"
                android:background="@drawable/rounded_corner_gray_solid"
                android:gravity="center"
                android:padding="@dimen/medium_padding"
                android:textSize="@dimen/tx_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/medium_dp"
                android:gravity="center"
                android:padding="@dimen/small_dp"
                android:text="@string/owner_mobile_number"
                android:textSize="@dimen/tx_medium" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/rounded_corner_gray_solid"
                android:gravity="center"
                android:inputType="phone"
                android:padding="@dimen/medium_padding"
                android:textSize="@dimen/tx_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/medium_dp"
                android:gravity="center"
                android:padding="@dimen/small_dp"
                android:text="@string/store_mobile_number"
                android:textSize="@dimen/tx_medium" />

            <EditText
                android:id="@+id/et_store_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/rounded_corner_gray_solid"
                android:gravity="center"
                android:padding="@dimen/medium_padding"
                android:textSize="@dimen/tx_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/medium_dp"
                android:gravity="center"
                android:padding="@dimen/small_dp"
                android:text="@string/value_number"
                android:textSize="@dimen/tx_medium" />

            <EditText
                android:id="@+id/et_value_added_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/rounded_corner_gray_solid"
                android:gravity="center"
                android:padding="@dimen/medium_padding"
                android:textSize="@dimen/tx_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/medium_dp"
                android:gravity="center"
                android:padding="@dimen/small_dp"
                android:text="@string/work_times"
                android:textSize="@dimen/tx_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_gray_solid"
                    android:gravity="center"
                    android:padding="@dimen/medium_padding"
                    android:textSize="@dimen/tx_medium" />

                <TextView
                    android:id="@+id/to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_gray_solid"
                    android:gravity="center"
                    android:padding="@dimen/medium_padding"
                    android:textSize="@dimen/tx_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="صورة السجل التجاري" />

                    <ImageView
                        android:id="@+id/commercial_register"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/add_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/medium_dp"
                        android:gravity="center"
                        android:text="صورة الهوية" />

                    <ImageView
                        android:id="@+id/idPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/add_image" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/select_location"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="@dimen/large_dp"
                android:background="@drawable/select_location_bar" />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_dp"
                android:background="@drawable/rounded_orange_solid"
                android:text="@string/send_register_request"
                android:textColor="@color/white"
                android:textSize="@dimen/tx_medium" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
